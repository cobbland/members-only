<%- include('head-er') %>

<p><%= locals.message %></p>

<% if (locals.messages.length > 0) { %>
    <ul>
        <% locals.messages.forEach(message => { %>
            <li><%= message.text %></li>
        <% }) %>
    </ul>
<% } else { %>
    <p>There are no messages...</p>
<% } %>

<% if (locals.currentUser) { %>
    <a class="btn" href="/messages/new">New Message</a>
<% } %>

<%- include('footer') %>